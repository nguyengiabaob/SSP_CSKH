@{
    Layout = null;
}
@model List<CSKH_SSP.ViewModels.ListRequest.ListRequestTicket>

<h5 style="margin: 20px">
    Các yêu cầu đang thực hiện<h5>
        @foreach (var item in Model)
        {
            if (item.RequestStatus == "Processing")
            {
                <div class="col-lg-12" id="RequestID-@item.RequestID">
                    <a target="_blank" href="/Home/Index?RequestID=@item.RequestID">
                        <div class="card m-b-30 margin-margin-bottom hover-request">
                            <div class="card-body">
                                <span class="mr-3 ribbon3"><p class="textRibbon">@item.RequestID</p></span>
                                <div class="media" style="padding-left: 4.5rem !important;">
                                    <div class="media-body">

                                        <h6 class="action-title" style="margin-bottom: 5px;">
                                            @item.RequestTittle - @item.RequestAuthor
                                        </h6>

                                        <h6>
                                            <span class="badge badge-primary-inverse">Đang xử lý</span>
                                        </h6>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }

        }

        <h5 style="margin: 20px">
            Các yêu cầu đã đóng<h5>
                @foreach (var item in Model)
                {
                    if (item.RequestStatus == "Done")
                    {
                        <div class="col-lg-12" id="RequestID-@item.RequestID">
                            <a target="_blank" href="/Home/Index?RequestID=@item.RequestID">
                                <div class="card m-b-30 margin-margin-bottom hover-request">
                                    <div class="card-body">
                                        <span class="mr-3 ribbon3"><p class="textRibbon">@item.RequestID</p></span>
                                        <div class="media" style="padding-left: 4.5rem !important;">
                                            <div class="media-body">

                                                <h6 class="action-title" style="margin-bottom: 5px;">
                                                    @item.RequestTittle - @item.RequestAuthor
                                                </h6>

                                                <h6>
                                                    <span class="badge badge-danger-inverse">Đã đóng</span>
                                                </h6>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                }

        $.fn.fileUploader = function (filesToUpload) {
            this.closest(".files").change(function (evt) {
                console.log(evt);
                for (var i = 0; i < evt.target.files.length; i++) {
                    filesToUpload.push(evt.target.files[i]);
                };

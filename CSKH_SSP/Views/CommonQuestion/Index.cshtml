        $(document).on("click", ".removeFile", function (e) {
            e.preventDefault();
            var fileName = $(this).parent().children("strong").text();
            for (i = 0; i < filesToUpload.length; ++i) {
                if (filesToUpload[i].name == fileName) {
                    filesToUpload.splice(i, 1);
                }
            }
            $(this).parent().remove();
        });
